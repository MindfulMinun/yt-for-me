<html class="no-js" lang="{{ d.lang }}">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>yt-for-me</title>
        <meta name="viewport" content="width=device-width">
        <meta name="theme-color" content="#448aff">

        <!-- Import styles -->
        <!-- Import Material Icons, Roboto & Roboto Mono -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Material+Icons|Roboto:100,100i,200,200i,300,300i,400,400i,500,500i|Roboto+Mono:300">
        <style media="screen">
            :root, html, body {
                font-family: "Roboto", Helvetica, Arial, sans-serif;
                margin: 0;
                line-height: 1.5;
                background-color: #1e1e1e;
                color: #fafafa;
            }
            *, *::before, *::after {
                box-sizing: border-box;
            }
            .no-js .no-js-hide {
                display: none;
            }
        </style>
        <link rel="stylesheet" href="/style.css">
        <script>window.yt = {
            lang: "{{ lang }}",
            i18n: "{{ i18n }}"
        };</script>
        <script src="./langs/{{ lang }}.js"></script>
    </head>
    <body>
        <!--[if lte IE 9]>
            <p class="browserupgrade">edge &gt; ie</p>
        <![endif]-->
        <main>
            <div class="container">
                <h1>yt-for-me</h1>
                <p>{{ d.welcome.hi }}</p>
                <noscript>{{{ d.welcome.nojs }}}</noscript>
                <p class="no-js-hide">{{{ d.welcome.vid }}}</p>
                <p class="no-js-hide">
                    {{ d.welcome.searchPre }}
                    <input type="text" placeholder="{{ d.welcome.searchPlaceholder }}" class="yt-input">
                </p>
            </div>
        </main>
    </body>
    <script>document.documentElement.classList.remove("no-js")</script>
    <script src="index.js"></script>
</html>
